<h2>All the pizzas!</h2>

<%@orders.each do |order|%>
  <div class="<%= order.topping == "Margherita" ? "margherita" : "calzone"%>">
  <p> Name: <%= order.pretty_name%> </p>
  <p> Order: <%= order.quantity%> x <%= order.topping%></p>
  <p><a href='/pizza_orders/<%= order.id%>'>View order details</a></p></div><hr>
<% end %>
